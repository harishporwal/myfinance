           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </a>
         <a class="brand" href="../">MyFinance</a>
         <div class="nav-collapse" id="main-menu">
           <ul class="nav" id="main-menu-left">
            <li><%= link_to "News", "#", id: "swatch-link"%></li>             
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Stocks<b class="caret"></b></a>
              <ul class="dropdown-menu" id="swatch-menu">
                <li><%= link_to "Action1", "#" %></li>
                <li><%= link_to "Action2", "#" %></li>
                <li><%= link_to "Action3", "#" %></li>
                <li><%= link_to "Action4", "#" %></li>
                <li class="divider"></li>
                <li><%= link_to "Action5", "#" %></li>
              </ul>
            </li>
            <li class="dropdown" id="preview-menu">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Utility<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Utility1", "#" %></li>
                <li><%= link_to "Utility2", "#" %></li>
                <li><%= link_to "Utility3", "#" %></li>
                <li><%= link_to "Utility4", "#" %></li>
                <li class="divider"></li>
                <li><%= link_to "Utility5", "#" %></li>
              </ul>
            </li>
            <li><%= link_to "Menu3", "#", id: "swatch-link"%></li>             
            <li><%= link_to "Menu4", "#", id: "swatch-link"%></li>             
          </ul>
          <ul class="nav pull-right" id="main-menu-right">
            <li><%= link_to "Help", "#"%></li>
            <li><%= link_to "About", "#"%></li>
            <li><%= link_to "Contact", "#"%></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", "#" %></li>
                <li><%= link_to "Settings", "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", "#", method: "delete" %>
                </li>
                <li><%= link_to "Sign in", "#" %></li>
              </ul>
            </li>
          </ul>
         </div>
       </div>
     </div>
   </div>

  <!-- container -->
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>

